<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE form-validation PUBLIC "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN" "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">
<form-validation>
	<formset>
		<form name="AddressForm">
			<field property="name" depends="required">
		        <arg key="test.name" bundle="vgsoftware"/>
		        <msg name="required" key="test.name" bundle="vgsoftware" />
			</field>
			<field property="address" depends="required">
		        <arg key="test.address" bundle="vgsoftware"/>
		        <msg name="required" key="test.address" bundle="vgsoftware" />
			</field>
			<field property="emailAddress" depends="required">
		        <arg key="test.emailaddress" bundle="vgsoftware"/>
		        <msg name="required" key="test.emailaddress" bundle="vgsoftware" />
			</field>
		</form>
	</formset>
</form-validation>