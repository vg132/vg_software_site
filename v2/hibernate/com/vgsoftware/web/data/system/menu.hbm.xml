<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.vgsoftware.web.data.system">
	<class name="Menu" table="system_menu">
		<id name="id" type="long" column="id" >
			<generator class="native"/>
		</id>
		<one-to-one name="parent" class="Menu" foreign-key="parent_id" />
		<property name="name">
			<column name="name"/>
		</property>
 		<property name="url">
			<column name="url"/>
		</property>
		<property name="membersOnly">
			<column name="members_only"/>
		</property>
		<property name="orderNr">
			<column name="order_nr"/>
		</property>
		<set name="subMenuItems" order-by="order_nr ASC">
			<key column="parent_id"/>
			<one-to-many class="Menu"/>
		</set>
	</class>
</hibernate-mapping>